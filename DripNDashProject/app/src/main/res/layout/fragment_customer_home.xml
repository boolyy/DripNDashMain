<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_customerHome">

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/current_jobs"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/recyclerViewCustomer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonCustomerRequest"
        android:layout_below="@id/textView5"
        android:padding = "4dp"
        android:scrollbars="vertical"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="0dp"/>

    <Button
        android:id="@+id/buttonCustomerRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/request_a_dasher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>